<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/shabadCellView"
    android:background="@drawable/shabadbackground"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:padding="4dp"
    android:animateLayoutChanges="true">
    <TextView
        android:id="@+id/shabadGurmukhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="gurbwxI"
        android:fontFamily="@font/gurbaniakharheavy"
        android:textSize="21dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:textColor="?mtextColor"
        android:padding="2dp"
        android:layout_marginBottom="-6dp"/>
    <TextView
        android:id="@+id/shabadTransliteration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="transliteration"
        android:fontFamily="@font/quicksandmedium"
        android:textSize="18dp"
        android:gravity="center_horizontal"
        android:textColor="?mcolorAccent" />
    <TextView
        android:id="@+id/shabadEnglish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="english translation"
        android:fontFamily="@font/quicksandregular"
        android:textSize="18dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textColor="?mtextColor"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"/>
    <TextView
        android:id="@+id/shabadArth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sbd ArQ"
        android:fontFamily="@font/gurbaniakharheavy"
        android:textSize="19dp"
        android:gravity="center_horizontal"
        android:textColor="?mshabadArthTextColor"
        android:layout_marginTop="4dp"/>
    <TextView
        android:id="@+id/shabadBhav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bwv ArQ"
        android:fontFamily="@font/gurbaniakharheavy"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:textColor="?mtextColor"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"/>
</LinearLayout>