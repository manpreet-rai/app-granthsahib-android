<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArchiveActivity"
    android:id="@+id/archiveMainView"
    android:background="?mcolorPrimary"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout android:minHeight="0dp" android:minWidth="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/archiveToolBar"
        app:elevation="0dp"
        android:animateLayoutChanges="true">
        <androidx.appcompat.widget.Toolbar android:minHeight="0dp" android:minWidth="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways"
            android:background="?mcolorPrimary">

            <LinearLayout android:minWidth="0dp" android:minHeight="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">
                <TextView android:minHeight="0dp" android:minWidth="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Granth Sahib"
                    android:fontFamily="@font/signpainterhousescript"
                    android:textSize="22dp"
                    android:textColor="?mtextColor"
                    android:layout_marginTop="8dp" />
                <RelativeLayout android:minWidth="0dp" android:minHeight="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <RelativeLayout android:minHeight="0dp" android:minWidth="0dp"
                        android:id="@+id/archiveBarView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="0dp"
                        android:background="?mcolorPrimary"
                        android:animateLayoutChanges="true"
                        android:layout_marginRight="8dp">
                        <ImageButton android:minHeight="28dp" android:minWidth="28dp"
                            android:id="@+id/archiveBack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_arrow_back_black_24dp"
                            android:background="@null"
                            android:tint="@color/redforeandblackonpress"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:scaleY="0.75"
                            android:scaleX="0.75"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="8dp" />
                        <RelativeLayout android:minHeight="0dp" android:minWidth="0dp"
                            android:id="@+id/datePickerArea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/settingsBtn"
                            android:layout_toRightOf="@id/archiveBack"
                            android:clickable="true"
                            android:layout_alignParentTop="true">
                            <TextView android:minHeight="0dp" android:minWidth="0dp"
                                android:id="@+id/datePicker"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Today"
                                android:fontFamily="@font/robotomedium"
                                android:textColor="?mtextColor"
                                android:textSize="19dp"
                                android:layout_alignParentTop="true"/>
                            <TextView android:minHeight="0dp" android:minWidth="0dp"
                                android:id="@+id/selectDateText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Change Date"
                                android:fontFamily="@font/robotomedium"
                                android:textColor="@color/redforeandblackonpress"
                                android:textSize="14dp"
                                android:layout_below="@id/datePicker"
                                android:gravity="center"/>
                        </RelativeLayout>
                        <ImageButton android:minHeight="36dp" android:minWidth="36dp"
                            android:id="@+id/settingsBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_more_vert_gray_36dp"
                            android:background="@null"
                            android:tint="@color/redforeandblackonpress"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:scaleY="0.75"
                            android:scaleX="0.75"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="8dp"/>

                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/archiveHukamView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:visibility="invisible">
                    <TextView
                        android:id="@+id/gurmukhiHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="@font/gurbaniakharheavy"
                        android:textSize="21dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:justificationMode="inter_word"
                        android:layout_marginTop="8dp"
                        android:textColor="?mtextColor"
                        android:layout_alignParentTop="true"/>
                    <TextView
                        android:id="@+id/gurmukhiContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/gurmukhiHeading"
                        android:text=""
                        android:fontFamily="@font/gurbaniakharheavy"
                        android:textSize="19dp"
                        android:layout_marginTop="8dp"
                        android:justificationMode="inter_word"
                        android:textColor="?mtextColor"/>
                    <TextView
                        android:id="@+id/punjabiViakhia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/gurmukhiContent"
                        android:text="ivAwiKAw"
                        android:fontFamily="@font/gurbaniakharheavy"
                        android:textSize="19dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:justificationMode="inter_word"
                        android:textColor="?mtextColor"/>
                    <TextView
                        android:id="@+id/punjabiContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/punjabiViakhia"
                        android:text=""
                        android:fontFamily="@font/gurbaniakharheavy"
                        android:textSize="19dp"
                        android:layout_marginTop="8dp"
                        android:justificationMode="inter_word"
                        android:textColor="?mtextColor"/>
                    <TextView
                        android:id="@+id/englishHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/punjabiContent"
                        android:text=""
                        android:fontFamily="@font/quicksandmedium"
                        android:textSize="19dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:justificationMode="inter_word"
                        android:textColor="?mtextColor"/>
                    <TextView
                        android:id="@+id/englishContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/englishHeading"
                        android:text=""
                        android:fontFamily="@font/quicksandmedium"
                        android:textSize="18dp"
                        android:layout_marginTop="8dp"
                        android:justificationMode="inter_word"
                        android:textColor="?mtextColor"/>
                    <TextView
                        android:id="@+id/angNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="@font/robotomedium"
                        android:layout_below="@id/englishContent"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="?mtextColor"
                        android:layout_marginBottom="36dp"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/infoLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Error Fetching Data, Please Try Again Later"
                    android:textSize="16dp"
                    android:textColor="?mcolorAccent"
                    android:fontFamily="@font/robotomedium"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="72dp"
                    android:gravity="center"
                    android:visibility="invisible"/>
            </RelativeLayout>

        </ScrollView>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/datePickerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?mcolorPrimary"
        android:clickable="true"
        android:visibility="visible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/archivesAvailability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Archives are available since 2002 only"
                android:textSize="16dp"
                android:fontFamily="@font/robotomedium"
                android:textColor="?mtextColor"
                android:gravity="center"/>
            <LinearLayout
                android:id="@+id/numberPickers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/archivesAvailability"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp">
                <NumberPicker
                    android:id="@+id/dayPicker"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:theme="@style/NumberPickerText"
                    android:layout_margin="16dp"
                    android:descendantFocusability="blocksDescendants">
                </NumberPicker>

                <NumberPicker
                    android:id="@+id/monthPicker"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:theme="@style/NumberPickerText"
                    android:layout_margin="16dp"
                    android:descendantFocusability="blocksDescendants">
                </NumberPicker>

                <NumberPicker
                    android:id="@+id/yearPicker"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:theme="@style/NumberPickerText"
                    android:layout_margin="16dp"
                    android:descendantFocusability="blocksDescendants">

                </NumberPicker>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/numberPickers"
                android:layout_centerHorizontal="true"
                android:layout_alignLeft="@id/numberPickers"
                android:layout_alignRight="@id/numberPickers">
                <Button
                    android:id="@+id/cancelNumberPickersBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:fontFamily="@font/robotomedium"
                    android:textColor="?mtextColor"
                    android:textSize="16dp"
                    android:layout_marginLeft="16dp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:textAllCaps="false"/>
                <Button
                    android:id="@+id/okayNumberPickersBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Okay"
                    android:fontFamily="@font/robotomedium"
                    android:textColor="@color/redforeandblackonpress"
                    android:textSize="16dp"
                    android:layout_marginRight="16dp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:textAllCaps="false"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/internetErrorView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:clickable="true"
        android:background="?mcolorPrimary">
        <TextView
            android:id="@+id/errorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error Fetching Data, Try Again Later"
            android:textColor="?mcolorAccent"
            android:gravity="center"
            android:textSize="16dp"
            android:fontFamily="@font/robotomedium"
            android:layout_centerInParent="true"/>

        <Button android:minHeight="0dp" android:minWidth="0dp"
            android:id="@+id/internetErrorBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/errorLabel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Back"
            android:textSize="16dp"
            android:background="@drawable/roundcornersdark"
            android:textColor="?mchoiceButtonTextColor"
            android:textAllCaps="false"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:padding="8dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/settingsMenuView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">
        <RelativeLayout
            android:id="@+id/settingsMenuHandlerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?mcolorPrimary"
            android:visibility="invisible"
            android:clickable="true">
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/settingsAreaView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="16dp"
            android:background="?mcolorPrimary"
            android:elevation="5dp"
            android:clickable="true">
            <ImageButton
                android:id="@+id/closeSettingsViewBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_black_24dp"
                android:background="@null"
                android:tint="@color/redforeandblackonpress"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:layout_toRightOf="@id/closeSettingsViewBtn"
                android:layout_alignTop="@id/closeSettingsViewBtn"
                android:layout_alignBottom="@id/closeSettingsViewBtn"
                android:gravity="center_vertical"
                android:textSize="22dp"
                android:textStyle="bold"
                android:fontFamily="@font/ralewaybold"
                android:textColor="?mtextColor"
                android:layout_marginLeft="16dp"
                android:clickable="true"/>
            <RelativeLayout
                android:id="@+id/fontSizeMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/closeSettingsViewBtn"
                android:layout_marginTop="16dp"
                android:clickable="true">
                <TextView
                    android:id="@+id/fontHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Font Size"
                    android:textSize="16dp"
                    android:padding="4dp"
                    android:fontFamily="@font/robotomedium"
                    android:textColor="?mtextColor" />
                <LinearLayout
                    android:id="@+id/fontSizeBtnsMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fontHeading"
                    android:background="@drawable/settingsheadingbackground">
                    <Button android:minWidth="0dp" android:minHeight="0dp"
                        android:id="@+id/fontSizeMinus5Btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:text="A"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:fontFamily="@font/robotomedium"
                        android:textSize="16dp"
                        android:textColor="@color/settingsbuttonstextcolor"
                        android:background="@drawable/topandbottomleftcurved"
                        android:padding="4dp"
                        android:gravity="center"/>
                    <Button android:minWidth="0dp" android:minHeight="0dp"
                        android:id="@+id/fontSizeMinus3Btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:text="A"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:fontFamily="@font/robotomedium"
                        android:textSize="18dp"
                        android:textColor="@color/settingsbuttonstextcolor"
                        android:background="@drawable/nocurved"
                        android:padding="4dp"
                        android:gravity="center"/>
                    <Button android:minWidth="0dp" android:minHeight="0dp"
                        android:id="@+id/fontSizeBtn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:text="A"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:fontFamily="@font/robotomedium"
                        android:textSize="19dp"
                        android:textColor="@color/settingsbuttonstextcolor"
                        android:background="@drawable/nocurved"
                        android:padding="4dp"
                        android:gravity="center"/>
                    <Button android:minWidth="0dp" android:minHeight="0dp"
                        android:id="@+id/fontSizePlus3Btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:text="A"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:fontFamily="@font/robotomedium"
                        android:textSize="20dp"
                        android:textColor="@color/settingsbuttonstextcolor"
                        android:background="@drawable/nocurved"
                        android:padding="4dp"
                        android:gravity="center"/>
                    <Button android:minWidth="0dp" android:minHeight="0dp"
                        android:id="@+id/fontSizePlus7Btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:text="A"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:fontFamily="@font/robotomedium"
                        android:textSize="21dp"
                        android:textColor="@color/settingsbuttonstextcolor"
                        android:background="@drawable/nocurved"
                        android:padding="4dp"
                        android:gravity="center"/>
                    <Button android:minWidth="0dp" android:minHeight="0dp"
                        android:id="@+id/fontSizePlus11Btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:text="A"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:fontFamily="@font/robotomedium"
                        android:textSize="23dp"
                        android:textColor="@color/settingsbuttonstextcolor"
                        android:background="@drawable/nocurved"
                        android:padding="4dp"
                        android:gravity="center"/>
                    <Button android:minWidth="0dp" android:minHeight="0dp"
                        android:id="@+id/fontSizePlus15Btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:text="A"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:fontFamily="@font/robotomedium"
                        android:textSize="25dp"
                        android:textColor="@color/settingsbuttonstextcolor"
                        android:background="@drawable/topandbottomrightcurved"
                        android:padding="4dp"
                        android:gravity="center"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fontSizeMenu"
                android:layout_marginTop="16dp"
                android:clickable="true">
                <TextView
                    android:id="@+id/HukamnamaHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hukamnama"
                    android:textSize="16dp"
                    android:padding="4dp"
                    android:fontFamily="@font/robotomedium"
                    android:textColor="?mtextColor" />
                <LinearLayout
                    android:id="@+id/hukamnamBtns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/HukamnamaHeading"
                    android:orientation="vertical">
                    <Button android:minWidth="0dp" android:minHeight="0dp"
                        android:id="@+id/showViakhiaBtn"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:text="Viakhia"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:fontFamily="@font/ralewaybold"
                        android:textSize="19dp"
                        android:textColor="@color/settingsbuttonstextcolor"
                        android:background="@drawable/allcurvedsettingsbtn"
                        android:padding="4dp"
                        android:layout_gravity="center_vertical"/>
                    <Button android:minWidth="0dp" android:minHeight="0dp"
                        android:id="@+id/showEnglishBtn"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:text="English"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:fontFamily="@font/ralewaybold"
                        android:textSize="19dp"
                        android:textColor="@color/settingsbuttonstextcolor"
                        android:background="@drawable/allcurvedsettingsbtn"
                        android:padding="4dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>