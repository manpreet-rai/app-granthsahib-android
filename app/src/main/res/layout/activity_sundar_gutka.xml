<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SundarGutka"
    android:id="@+id/sundarGutkaDrawer"
    android:background="?mcolorPrimary"
    android:fitsSystemWindows="true">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?mcolorPrimary">
        <com.google.android.material.appbar.AppBarLayout android:minWidth="0dp" android:minHeight="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/shabadToolBar"
            app:elevation="0dp"
            android:background="?mcolorPrimary">
            <androidx.appcompat.widget.Toolbar android:minHeight="0dp" android:minWidth="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|enterAlways"
                android:background="?mcolorPrimary">
                <LinearLayout android:minWidth="0dp" android:minHeight="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true"
                    android:clickable="true">
                    <TextView android:minHeight="0dp" android:minWidth="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Granth Sahib"
                        android:fontFamily="@font/signpainterhousescript"
                        android:textSize="22dp"
                        android:textColor="?mtextColor"
                        android:layout_marginTop="8dp" />
                    <RelativeLayout android:minHeight="0dp" android:minWidth="0dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout android:minHeight="0dp" android:minWidth="0dp"
                            android:id="@+id/sundarGutkaBarView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="0dp"
                            android:background="?mcolorPrimary"
                            android:layout_marginRight="8dp">
                            <ImageButton android:minHeight="28dp" android:minWidth="28dp"
                                android:id="@+id/sundarGutkaBackBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_arrow_back_black_24dp"
                                android:background="@null"
                                android:tint="@color/redforeandblackonpress"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:scaleY="0.8"
                                android:scaleX="0.8"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"/>
                            <RelativeLayout android:minWidth="0dp" android:minHeight="0dp"
                                android:id="@+id/shabadInfoArea"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@+id/settingsBtn"
                                android:layout_toRightOf="@id/sundarGutkaBackBtn"
                                android:clickable="true"
                                android:layout_alignParentTop="true">
                                <TextView android:minHeight="0dp" android:minWidth="0dp"
                                    android:id="@+id/nitnemHeading"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Nitnem"
                                    android:gravity="center_horizontal"
                                    android:fontFamily="@font/signpainterhousescript"
                                    android:textColor="?mtextColor"
                                    android:textSize="26dp"
                                    android:layout_alignParentTop="true"
                                    android:visibility="visible"/>
                                <TextView android:minHeight="0dp" android:minWidth="0dp"
                                    android:id="@+id/baniHeading"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="jpujI swihb"
                                    android:textStyle="bold"
                                    android:gravity="center_horizontal"
                                    android:fontFamily="@font/gurbaniakharheavy"
                                    android:textColor="?mtextColor"
                                    android:textSize="24dp"
                                    android:layout_centerVertical="true"
                                    android:visibility="invisible"/>
                            </RelativeLayout>
                            <ImageButton android:minHeight="28dp" android:minWidth="28dp"
                                android:id="@+id/sundarGuktaGoToBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_share_symbol"
                                android:background="@null"
                                android:tint="@color/redforeandblackonpress"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:scaleY="0.70"
                                android:scaleX="0.70"
                                android:layout_toLeftOf="@id/settingsBtn"
                                android:layout_alignParentTop="true"
                                android:visibility="invisible"/>
                            <ImageButton android:minHeight="28dp" android:minWidth="28dp"
                                android:id="@+id/settingsBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_more_vert_gray_36dp"
                                android:background="@null"
                                android:tint="@color/redforeandblackonpress"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:scaleY="0.75"
                                android:scaleX="0.75"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:visibility="invisible"/>
                        </RelativeLayout>
                        <View
                            android:id="@+id/emptyMarginView"
                            android:layout_below="@id/sundarGutkaBarView"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:background="?mcolorPrimary"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
            <androidx.appcompat.widget.Toolbar android:minHeight="0dp" android:minWidth="0dp"
                android:id="@+id/sundarGutkaBtnsView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?mcolorPrimary"
                android:visibility="visible">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="16dp"
                    android:animateLayoutChanges="true"
                    android:clickable="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button android:minWidth="0dp" android:minHeight="0dp"
                            android:id="@+id/allBanisBtn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:background="@drawable/sundargutkachoicebuttons"
                            android:text="All Banis"
                            android:textSize="18dp"
                            android:textAllCaps="false"
                            android:padding="8dp"
                            android:fontFamily="@font/ralewaybold"
                            android:textColor="@color/sundargutkabuttoncolors"
                            android:layout_marginRight="4dp"/>
                        <Button android:minWidth="0dp" android:minHeight="0dp"
                            android:id="@+id/quickListBtn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:background="@drawable/sundargutkachoicebuttons"
                            android:text="Quick List"
                            android:textSize="18dp"
                            android:textAllCaps="false"
                            android:padding="8dp"
                            android:fontFamily="@font/ralewaybold"
                            android:textColor="@color/sundargutkabuttoncolors"
                            android:layout_marginLeft="4dp"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/quickListEmptyMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/ralewaybold"
            android:textSize="16dp"
            android:textColor="?mtintColor"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:text="@string/emptyQuickListMessage" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/baniListRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:scrollbarFadeDuration="100"
            android:background="?mcolorPrimary"
            android:visibility="visible"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/quickBaniListRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:scrollbarFadeDuration="100"
            android:visibility="invisible"
            android:background="?mcolorPrimary"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gurbaniRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:scrollbarFadeDuration="100"
            android:visibility="invisible"
            android:background="?mcolorPrimary"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <RelativeLayout
            android:id="@+id/itemViewOptionsView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">
            <RelativeLayout
                android:id="@+id/itemViewBackgroundHandlerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?mcolorPrimary"
                android:visibility="invisible"
                android:clickable="true">
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/itemViewOptionsMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="16dp"
                android:background="?mcolorPrimary"
                android:elevation="5dp"
                android:clickable="true">
                <ImageButton
                    android:id="@+id/closeItemViewOptionsViewBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close_black_24dp"
                    android:background="@null"
                    android:tint="@color/redforeandblackonpress"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Options"
                    android:layout_toRightOf="@id/closeItemViewOptionsViewBtn"
                    android:layout_alignTop="@id/closeItemViewOptionsViewBtn"
                    android:layout_alignBottom="@id/closeItemViewOptionsViewBtn"
                    android:gravity="center_vertical"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/ralewaybold"
                    android:textColor="?mtextColor"
                    android:layout_marginLeft="16dp"
                    android:clickable="true"/>
                <View
                    android:id="@+id/itemViewOptionsBorder"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/closeItemViewOptionsViewBtn"
                    android:layout_marginTop="16dp"
                    android:background="?mcolorAccent"
                    android:clickable="true"/>

                <TextView
                    android:id="@+id/itemViewOptionsSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add to Quick List"
                    android:textSize="20dp"
                    android:fontFamily="@font/ralewaymedium"
                    android:textStyle="bold"
                    android:textColor="@color/redforeandblackonpress"
                    android:layout_below="@id/itemViewOptionsBorder"
                    android:layout_toRightOf="@id/closeItemViewOptionsViewBtn"
                    android:layout_marginTop="12dp"
                    android:clickable="true"
                    android:layout_marginBottom="8dp"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/settingsMenuView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">
            <RelativeLayout
                android:id="@+id/settingsMenuHandlerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?mcolorPrimary"
                android:visibility="invisible"
                android:clickable="true">
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/settingsAreaView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="16dp"
                android:background="?mcolorPrimary"
                android:elevation="5dp"
                android:clickable="true">
                <ImageButton
                    android:id="@+id/closeSettingsViewBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close_black_24dp"
                    android:background="@null"
                    android:tint="@color/redforeandblackonpress"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:layout_toRightOf="@id/closeSettingsViewBtn"
                    android:layout_alignTop="@id/closeSettingsViewBtn"
                    android:layout_alignBottom="@id/closeSettingsViewBtn"
                    android:gravity="center_vertical"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/ralewaybold"
                    android:textColor="?mtextColor"
                    android:layout_marginLeft="16dp"
                    android:clickable="true"/>
                <RelativeLayout
                    android:id="@+id/fontTypeMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/closeSettingsViewBtn"
                    android:layout_marginTop="16dp"
                    android:clickable="true">
                    <TextView
                        android:id="@+id/fontStyleHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Font Style"
                        android:textSize="16dp"
                        android:padding="4dp"
                        android:fontFamily="@font/robotomedium"
                        android:textColor="?mtextColor" />
                    <LinearLayout
                        android:id="@+id/fontStyleBtnsMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fontStyleHeading"
                        android:background="@drawable/settingsheadingbackground">
                        <Button android:minWidth="0dp" android:minHeight="0dp"
                            android:id="@+id/slimFontStyleBtn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:text="Slim"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:fontFamily="@font/ralewaymedium"
                            android:textSize="16dp"
                            android:textColor="@color/settingsbuttonstextcolor"
                            android:background="@drawable/topandbottomleftcurved"
                            android:padding="4dp"
                            android:gravity="center"/>
                        <Button android:minWidth="0dp" android:minHeight="0dp"
                            android:id="@+id/regularFontStyleBtn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:text="Regular"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:fontFamily="@font/ralewaymedium"
                            android:textSize="16dp"
                            android:textColor="@color/settingsbuttonstextcolor"
                            android:background="@drawable/nocurved"
                            android:padding="4dp"
                            android:gravity="center"/>

                        <Button android:minWidth="0dp" android:minHeight="0dp"
                            android:id="@+id/mediumFontStyleBtn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:text="Medium"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:fontFamily="@font/ralewaymedium"
                            android:textSize="16dp"
                            android:textColor="@color/settingsbuttonstextcolor"
                            android:background="@drawable/nocurved"
                            android:padding="4dp"
                            android:gravity="center"/>
                        <Button android:minWidth="0dp" android:minHeight="0dp"
                            android:id="@+id/boldFontStyleBtn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:text="Bold"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:fontFamily="@font/ralewaymedium"
                            android:textSize="16dp"
                            android:textColor="@color/settingsbuttonstextcolor"
                            android:background="@drawable/topandbottomrightcurved"
                            android:padding="4dp"
                            android:gravity="center"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/fontSizeMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fontTypeMenu"
                    android:layout_marginTop="16dp"
                    android:clickable="true">
                    <TextView
                        android:id="@+id/fontHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Font Size"
                        android:textSize="16dp"
                        android:padding="4dp"
                        android:fontFamily="@font/robotomedium"
                        android:textColor="?mtextColor" />
                    <LinearLayout android:minHeight="24dp"
                        android:id="@+id/fontSizeBtnsMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fontHeading"
                        android:padding="8dp"
                        android:background="@drawable/settingsheadingbackground">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:text="Size"
                            android:textSize="18dp"
                            android:fontFamily="@font/ralewaybold"
                            android:textColor="?mtextColor"
                            android:gravity="center"/>
                        <SeekBar
                            android:id="@+id/fontSizeSeekBar"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.65"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/fontSizeSeekBarProgress"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.15"
                            android:text="19"
                            android:textSize="18dp"
                            android:fontFamily="@font/ralewaybold"
                            android:textColor="?mtextColor"
                            android:gravity="center"/>
                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?mcolorPrimary"
        android:layout_gravity="end">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp">
            <TextView
                android:id="@+id/gotoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Access"
                android:textSize="20dp"
                android:textColor="?mcolorAccent"
                android:gravity="center_vertical"
                android:fontFamily="@font/ralewaybold"
                android:layout_alignParentRight="true"
                android:padding="12dp"
                android:layout_marginRight="12dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/gotoRV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:background="?mcolorPrimary"
                android:layout_below="@id/gotoLabel">
            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>